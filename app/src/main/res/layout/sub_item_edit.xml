<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <TextView
    android:id="@+id/editSubItemTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    tools:text="Example"
    android:textSize="16sp"
    android:textColor="@android:color/black"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <ImageButton
    android:id="@+id/deleteSubItem"
    style="@android:style/Widget.DeviceDefault.ImageButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:background="?android:attr/selectableItemBackgroundBorderless"
    android:contentDescription="@string/edit"
    android:tint="@android:color/darker_gray"
    app:layout_constraintBottom_toBottomOf="@+id/editSubItemTitle"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/editSubItemTitle"
    app:srcCompat="@drawable/ic_clear_white_24dp"/>
  <View
    android:id="@+id/view3"
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_marginTop="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editSubItemTitle"/>
</androidx.constraintlayout.widget.ConstraintLayout>